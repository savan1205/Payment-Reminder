<?xml version="1.0"?>
<odoo>
    <record id="so_cancel_reason_form" model="ir.ui.view">
        <field name="name">so.cancel.form</field>
        <field name="model">so.cancel</field>
        <field name="arch" type="xml">
            <form string="Lost Reason">
                <group class="oe_title">
                    <field name="lost_reason_id"/>
                </group>
                <footer>
                    <button name="action_lost_reason_so" string="Submit" type="object" class="btn-primary"
                            data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
